doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        title Noom
    body 

    header 
        h1 NOOM 

    main
        div#welcome
            form 
                input(type="text" placeholder="room name",required)
                button join room
        div#call 
            div#myStrem 
            video#myFace(autoplay,playsinline, muted, width="400", height="400")
            //- playsinline은 전체화면 방지
            button#mute Mute 
            button#camera Turn Off
            select#cameras
            video#peerFace(autoplay,playsinline,width="400",height="400")
    script(src="/socket.io/socket.io.js")  
    script(src="/public/js/app.js")